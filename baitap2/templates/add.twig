{% extends 'layout.twig' %}

{% block content %}
    <div class="container">
        <div class="row" style="display: flex; justify-content: center; align-items: center;">
            <h2 class="col-xl-6 col-lg-6 col-md-12">Add User</h2>
        </div>
        <div class="row" style="display: flex; justify-content: center; align-items: center;">
            <div class="col-xl-6 col-lg-6 col-md-12">
                <form method="post" action="">
                    <div class="form-group mb-3">
                        <label for="name">Name</label>
                        <input type="text" name="name" id="name" class="form-control validate" required/>
                    </div>
                    <div class="form-group mb-3">
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" class="form-control validate" required/>
                    </div>
                    <div class="col-12" style="display: flex; justify-content: center; align-items: center;">
                        <button type="submit" class="btn btn-success btn-block text-uppercase">Add User</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}